{% extends '@Pinboard/layout.html.twig' %}

{% block body %}

    {% for flash_message in app.session.flashBag.get('notice') %}
        <div class="flash-notice">
            {{ flash_message }}
        </div>
    {% endfor %}

    <h1>{{ homepage_h1 }}</h1>
    {% for card in cards %}
        <div>
            <img src="{{ card.image }}">
            <h2>{{ card.title }}</h2>
            <p>{{ card.description }}</p>
            <a href="{{ path('card', {'slug': card.slug}) }}">Go to {{ card.title }}</a>
        </div>
    {% endfor %}
{% endblock %}